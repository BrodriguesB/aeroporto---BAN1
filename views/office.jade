extends layout

block content
  body(data-ng-app="OfficeMainApp",data-ng-controller="indexController")
    md-content
      h1= title
      p Bem vindo a #{title}

      <!-- Button trigger modal -->
      div
        md-button(ng-click="showAdvanced($event)") Adicionar
        md-button
          a(href="/flights") Voos

      md-content.md-padding(layout-xs="column", layout="column")
        md-grid-list(md-cols-gt-md="4", md-cols="3", md-cols-md="3", md-row-height-gt-md="1:1.3", md-row-height="1:1.3", md-gutter-gt-md="16px", md-gutter-md="8px", md-gutter="4px")
          //- List
          md-grid-tile(ng-repeat="office in offices")
            md-card
              md-card-title
                md-card-title-text
                  span.md-headline Matricula - {{office.num_matricula}}
              md-card-content
                md-list
                  md-list-item
                    p Nome : {{office.nom_funcionario}}
                  md-list-item
                    p Endereco : {{office.den_endereco}}
                  md-list-item
                    p Telefone : {{office.num_telefone}}
                  md-list-item
                    p Salario : {{office.val_salario}}
                  md-list-item
                    p Id cargo : {{office.id_cargo}}
                  md-list-item
                    p Membro sindicato : {{office.num_membro_sindicato}}
                  md-list-item
                    p Id do sindicato : {{office.id_sindicato}}
                  md-list-item
              md-card-actions(layout="row", layout-align="end center")
                md-button(ng-click="showAdvanced($event,office)")
                  md-icon.material-icons.md-ligh.md-avatar-icon edit
                md-button(ng-click="delete(office)")
                  md-icon.material-icons.md-ligh.md-avatar-icon close
  script(type="text/ng-template" id="dialog1.tmpl.html")
    md-dialog(layout-padding="",style="min-width:500px;")
      form(ng-cloak)
        //- Edit | Add
        md-title
          h3(layout-gt-xs="row")
            md-input-container.md-block(flex-gt-xs)
              label(for="den_cargo") Nome do cargo
              input#den_cargo.md-input(ng-model="item.den_cargo", aria-invalid="false",name="den_cargo",md-autofocus)
            md-input-container
              md-button.md-icon-button.md-primary(aria-label="Profile",ng-click="cancel()",style="display:inline-block;top: -35px;")
                md-icon.material-icons close

        md-dialog-content(layout-padding)
          md-input-container.md-block(flex-gt-sm)
            label(for="id_cargo") Id
            input#id_cargo.md-input(ng-model="item.id_cargo", aria-invalid="true",name="id_cargo",type="number")



        md-dialog-actions(layout="row", layout-align="end center")
          md-button(type="clear")
            md-icon.material-icons.md-ligh.md-avatar-icon refresh
          md-button(ng-click="answer(item)")
            md-icon.material-icons.md-ligh.md-avatar-icon done



  script(type='text/javascript', src='/javascripts/officeModule.js')